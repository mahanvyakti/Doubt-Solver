<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pd.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".student.viewAnswer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".teacher.answerDoubt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.homeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.physicsFAQ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.chemistryFAQ"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.teacherList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.askDoubt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".teacher.addDoubt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".teacher.teacherList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".teacher.startTeacher"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.startStudent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Chat"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Users"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>